<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_marginBottom="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvDoctorName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/h4_dp_16"
        android:layout_marginTop="@dimen/h4_dp_16"
        android:layout_marginEnd="@dimen/h4_dp_16"
        android:lineHeight="36sp"
        android:text="Hi Dr.Prithwi"
        android:textColor="#303245"
        android:textFontWeight="700"
        android:textSize="@dimen/h3_sp_20"
        android:textStyle="normal" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDoctorName"
        app:tabIndicatorColor="@color/blue"
        app:tabSelectedTextColor="@color/black">
    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tabLayout"
        android:layout_centerInParent="true"/>



</RelativeLayout>