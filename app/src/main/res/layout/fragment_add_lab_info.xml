

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintVertical_bias="0.0"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="32dp"
            android:clipToPadding="false">

            <ImageView
                android:id="@+id/imgBackAddInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:src="@drawable/ic_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvAddInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:lineSpacingExtra="1sp"
                android:translationY="-0.27sp"
                android:textColor="#303245"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center_vertical"
                android:text="@string/add_lab_info"
                android:textSize="@dimen/h3_sp_20"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgBackAddInfo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvSignupDetails"
                android:layout_marginTop="12dp"
                android:text="@string/add_info_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvAddInfo"/>


            <TextView
                android:id="@+id/tvLabNameTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:textSize="@dimen/h5_sp_14"
                android:lineSpacingExtra="4sp"
                android:translationY="-1.79sp"
                android:textColor="#303245"
                android:gravity="start"
                android:layout_marginTop="@dimen/h5_dp_14"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvSignupDetails"
                />

            <EditText
                android:id="@+id/etLabName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/layout_rounded_bg"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:maxLength="80"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvLabNameTitle"
                />


            <TextView
                android:id="@+id/tvLabAddressTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/address"
                android:textSize="@dimen/h5_sp_14"
                android:lineSpacingExtra="4sp"
                android:translationY="-1.79sp"
                android:textColor="#303245"
                android:gravity="start"
                android:layout_marginTop="@dimen/h5_dp_14"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etLabName"
                />


            <EditText
                android:id="@+id/etLabAddress"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/layout_rounded_bg"
                android:inputType="textPostalAddress"
                android:padding="5dp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvLabAddressTitle"
                />
            <TextView
                android:id="@+id/tvPhoneTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/phone_number"
                android:textSize="@dimen/h5_sp_14"
                android:lineSpacingExtra="4sp"
                android:translationY="-1.79sp"
                android:textColor="#303245"
                android:gravity="start"
                android:layout_marginTop="@dimen/h5_dp_14"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etLabAddress"
                />

            <EditText
                android:id="@+id/etPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@drawable/layout_rounded_bg"
                android:inputType="phone"
                android:padding="5dp"
                android:maxLength="10"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvPhoneTitle"
                />

            <TextView
                android:id="@+id/tvMailTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/e_mail_adress"
                android:textSize="@dimen/h5_sp_14"
                android:lineSpacingExtra="4sp"
                android:translationY="-1.79sp"
                android:textColor="#303245"
                android:gravity="start"
                android:layout_marginTop="@dimen/h5_dp_14"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etPhoneNumber"
                />

            <EditText
                android:id="@+id/etMail"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@drawable/layout_rounded_bg"
                android:inputType="textEmailAddress"
                android:padding="5dp"
                android:maxLength="40"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvMailTitle"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvPinCodeTitile"
                android:text="@string/pin_code"
                android:textSize="@dimen/h5_sp_14"
                android:lineSpacingExtra="4sp"
                android:translationY="-1.79sp"
                android:textColor="#303245"
                android:gravity="start"
                android:layout_marginTop="@dimen/h5_dp_14"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etMail"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/etPinCode"
                android:background="@drawable/layout_rounded_bg"
                android:inputType="number"
                android:padding="5dp"
                android:maxLength="10"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvPinCodeTitile"/>

            <Spinner
                android:id="@+id/spinnerShop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/phone_number"
                android:textSize="@dimen/h5_sp_14"
                android:lineSpacingExtra="4sp"
                android:textColor="#303245"
                android:gravity="start"
                android:layout_marginTop="@dimen/h5_dp_14"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etPinCode"
                />


            <TextView
                android:id="@+id/tvCertificate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/upload_license"
                android:textSize="@dimen/h5_sp_14"
                android:lineSpacingExtra="4sp"
                android:translationY="-1.79sp"
                android:textColor="#303245"
                android:gravity="start"
                android:layout_marginTop="@dimen/h5_dp_14"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spinnerShop"
                />



            <Button
                android:id="@+id/btUpload"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:padding="5dp"
                android:text="@string/upload_file"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvCertificate"
                />

            <TextView
                android:id="@+id/tvWorkTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/select_your_timings"
                android:textSize="@dimen/h5_sp_14"
                android:lineSpacingExtra="4sp"
                android:translationY="-1.79sp"
                android:textColor="#303245"
                android:gravity="start"
                android:layout_marginTop="@dimen/h5_dp_14"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btUpload"
                />

            <Button
                android:id="@+id/btSelectWorkingTime"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:padding="5dp"
                android:text="@string/tap_here_to_select"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvWorkTime"/>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btNextStep"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/confirm_btn"
                android:lineSpacingExtra="16sp"
                android:text="@string/cont"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btSelectWorkingTime" />






        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

